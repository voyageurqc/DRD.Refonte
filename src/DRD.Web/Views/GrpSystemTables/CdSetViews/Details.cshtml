@using static DRD.Resources.Common
@using static DRD.Resources.FieldNames.CdSetFieldNames
@using DRD.Application.Popup.Models
@model DRD.Domain.Entities.GrpSystemTables.CdSet

@{
    ViewData["Title"] = SystemTables.Codeset_Details;

    var returnUrl = ViewData["ReturnUrl"] as string
                    ?? Url.Action("Index", "CdSet");

    var metadata = ViewData["Metadata"] as EntityMetadataDto;
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm p-4">

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">@TypeCode</label>
            <input class="form-control" value="@Model.TypeCode" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label">@Code</label>
            <input class="form-control" value="@Model.Code" readonly />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">@DescriptionFr</label>
        <input class="form-control" value="@Model.DescriptionFr" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">@DescriptionEn</label>
        <input class="form-control" value="@Model.DescriptionEn" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">@IsActive</label><br />

        @if (Model.IsActive)
        {
            <span class="badge bg-success">@Common.Active</span>
        }
        else
        {
            <span class="badge bg-danger">@Common.Inactive</span>
        }
    </div>

    <div class="d-flex justify-content-between mt-4">

        <div>
            <a href="@returnUrl" class="btn btn-secondary btn-3d me-2">
                <i class="fas fa-arrow-left"></i> @Button_Back
            </a>

            <a asp-controller="CdSet"
               asp-action="Edit"
               asp-route-id="@Model.TypeCode"
               asp-route-key2="@Model.Code"
               asp-route-returnUrl="@returnUrl"
               class="btn btn-primary btn-3d">
                <i class="fas fa-pen"></i> @Button_Edit
            </a>
        </div>

        @if (metadata != null)
        {
            <button type="button"
                    class="btn btn-info btn-3d"
                    data-bs-toggle="modal"
                    data-bs-target="#systemMetadataModal">
                <i class="fas fa-info-circle"></i> @Button_Metadata
            </button>
        }
    </div>

</div>

@if (metadata != null)
{
    <partial name="~/Views/Shared/Partials/_SystemMetadataPartial.cshtml" model="metadata" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_Toastr" />
}
