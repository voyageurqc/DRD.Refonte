@using DRD.Application.Popup.Models
@*
===============================================================================
Projet                         DRD.Web
Fichier                        Details.cshtml
Type                           Razor View (MVC)
Classe                         CdSet Details View
Emplacement                    Views/GrpSystemTables/CdSet
Entités concernées             CdSetDetailsVM, EntityMetadataDto
Créé le                        2025-12-08

Description
    Vue présentant les détails d’un CdSet en mode lecture seule. Les clés
    (TypeCode + Code) ainsi que les descriptions bilingues sont affichées.
    Inclut le bouton Métadonnées pour afficher les informations système.

Fonctionnalité
    - Affichage readonly
    - Badge actif/inactif
    - Boutons Retour / Modifier
    - Modale Métadonnées

Modifications
    2025-12-09   Conversion complète DRD v10 :
                 - utilisation CdSetDetailsVM
                 - usings resources corrigés
                 - badge uniformisé
===============================================================================
*@

@model DRD.Web.Models.GrpSystemTables.CdSetVM.CdSetDetailsVM

@using static DRD.Resources.Common.Common
@using static DRD.Resources.LabelNames.CdSetLN
@using static DRD.Resources.Buttons.Buttons
@using static DRD.Resources.Popups.Popups
@using static DRD.Resources.EntityTitles.CdSetTitle

@{
    ViewData["Title"] = string.Format(CdSet_Detail_Title, Model.TypeCode, Model.Code);

    var returnUrl = Model.ReturnUrl ?? Url.Action("Index", "CdSet");
    var metadata = ViewData["Metadata"] as EntityMetadataDto;
}

@* ============================================================================
   ==== BANDEAU BLEU — EDIT ====
   ============================================================================ *@
<div class="d-flex justify-content-between align-items-center mb-4 p-3"
     style="background-color:#0d6efd; color:white; border-radius:8px;">

    <h2 class="m-0 fw-bold">@ViewData["Title"]</h2>

    <div class="d-flex gap-3">

        <a asp-controller="CdSet"
           asp-action="Edit"
           asp-route-id="@Model.TypeCode"
           asp-route-key2="@Model.Code"
           asp-route-returnUrl="@returnUrl"
           class="btn btn-info btn-circle btn-3d"
           title="@Button_Edit">
            <i class="fas fa-pen"></i>
        </a>

        @* BACK *@
        @await Html.PartialAsync(
        "_ReturnButton",
                new DRD.Web.Models.Shared.Navigation.ReturnButtonVM
                {
                    ReturnUrl = Model.ReturnUrl,
                    ControllerName = "CdSet"
                }
                )

        @* METADATA *@
        @if (metadata != null)
        {
            <button type="button"
                    class="btn btn-info btn-circle btn-3d"
                    data-bs-toggle="modal"
                    data-bs-target="#systemMetadataModal"
                    title="@Button_Metadata">
                <i class="fa-solid fa-circle-info"></i>
            </button>
        }

    </div>
</div>

<div class="card shadow-sm p-4">

    <!-- IDENTIFICATION -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">@Field_TypeCode</label>
            <input class="form-control input-3d" value="@Model.TypeCode" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label">@Field_Code</label>
            <input class="form-control input-3d" value="@Model.Code" readonly />
        </div>
    </div>

    <!-- DESCRIPTIONS -->
    <div class="mb-3">
        <label class="form-label">@Field_DescriptionFr</label>
        <input class="form-control input-3d" value="@Model.DescriptionFr" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">@Field_DescriptionEn</label>
        <input class="form-control input-3d" value="@Model.DescriptionEn" readonly />
    </div>

    <!-- ACTIF / INACTIF -->
    <div class="mb-3">
        <label class="form-label">@IsActive</label><br />

        @if (Model.IsActive)
        {
            <span class="badge bg-success">@TextActive</span>
        }
        else
        {
            <span class="badge bg-danger">@TextInactive</span>
        }
    </div>


</div>

@if (metadata != null)
{
    <partial name="~/Views/Shared/Partials/_SystemMetadataPartial.cshtml"
             model="metadata" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
