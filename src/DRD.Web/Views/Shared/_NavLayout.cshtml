@using DRD.Resources.Menu

<aside id="app-sidebar">
    <nav class="nav flex-column">

        <!-- ===================================================================== -->
        <!--  ACCUEIL                                                             -->
        <!-- ===================================================================== -->
        <a class="nav-link" href="@Url.Action("Index", "Home")" title="@Menu.Home">
            <i class="fa-solid fa-house fa-lg me-2"></i>
            @Menu.Home
        </a>

        <!-- ===================================================================== -->
        <!--  SÉCURITÉ                                                             -->
        <!-- ===================================================================== -->
        <a class="nav-link" href="@Url.Action("Index", "Security")" title="@Menu.Security">
            <i class="fa-solid fa-shield-halved fa-lg me-2"></i>
            @Menu.Security
        </a>

        <!-- ===================================================================== -->
        <!--  CLIENTS                                                              -->
        <!-- ===================================================================== -->
        <a class="nav-link" href="@Url.Action("Index", "Client")" title="@Menu.Clients">
            <i class="fa-solid fa-users fa-lg me-2"></i>
            @Menu.Clients
        </a>

        <!-- ===================================================================== -->
        <!--  INSTITUTIONS FINANCIÈRES                                            -->
        <!-- ===================================================================== -->
        <a class="nav-link" href="@Url.Action("Index", "FinancialInstitution")" title="@Menu.Institutions">
            <i class="fa-solid fa-building-columns fa-lg me-2"></i>
            @Menu.Institutions
        </a>

        <!-- ===================================================================== -->
        <!--  RAPPORTS                                                             -->
        <!-- ===================================================================== -->
        <a class="nav-link" href="@Url.Action("Index", "Reports")" title="@Menu.Reports">
            <i class="fa-solid fa-chart-pie fa-lg me-2"></i>
            @Menu.Reports
        </a>

        <!-- ===================================================================== -->
        <!--  MESSAGES WEB                                                         -->
        <!-- ===================================================================== -->
        <a class="nav-link" href="@Url.Action("Index", "WebMessage")" title="@Menu.Messages">
            <i class="fa-solid fa-envelope fa-lg me-2"></i>
            @Menu.Messages
        </a>

