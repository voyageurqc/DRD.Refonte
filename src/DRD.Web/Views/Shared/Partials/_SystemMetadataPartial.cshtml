@using DRD.Resources
@using System.Globalization
@model DRD.Application.Popup.Models.EntityMetadataDto

<div class="modal fade"
     id="systemMetadataModal"
     tabindex="-1"
     aria-labelledby="systemMetadataLabel"
     aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-3">

            @* ============================================================
               HEADER
               ============================================================ *@
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="systemMetadataLabel">
                    <i class="fas fa-database"></i> @SystemTables.SystemInfoTitle
                </h5>

                <button type="button"
                        class="btn-close btn-close-white"
                        data-bs-dismiss="modal"
                        aria-label="@Common.Button_Close">
                </button>
            </div>

            @* ============================================================
               BODY
               ============================================================ *@
            <div class="modal-body">

                <ul class="list-group list-group-flush">

                    <li class="list-group-item">
                        <i class="fa-solid fa-calendar-plus"></i>
                        @Common.CreatedOn :
                        <strong>
                            @Model.CreationDate.ToString(CultureInfo.CurrentCulture)
                        </strong>
                    </li>

                    <li class="list-group-item">
                        <i class="fa-solid fa-user"></i>
                        @Common.CreatedBy :
                        <strong>
                            @(Model.CreatedByName ?? Model.CreatedBy ?? "N/A")
                        </strong>
                    </li>

                    <li class="list-group-item">
                        <i class="fa-solid fa-calendar-pen"></i>
                        @Common.ModifiedOn :
                        <strong>
                            @Model.ModificationDate.ToString(CultureInfo.CurrentCulture)
                        </strong>
                    </li>

                    <li class="list-group-item">
                        <i class="fa-solid fa-user-pen"></i>
                        @Common.ModifiedBy :
                        <strong>
                            @(Model.UpdatedByName ?? Model.UpdatedBy ?? "N/A")
                        </strong>
                    </li>

                </ul>

            </div>
        </div>
    </div>
</div>
