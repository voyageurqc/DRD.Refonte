@using DRD.Resources
@using static DRD.Resources.Common.Common
@using static DRD.Resources.LabelNames.CdSetLN
@using static DRD.Resources.Buttons.Buttons
@using static DRD.Resources.Popups.Popups


<div class="modal fade"
     id="confirmationModal"
     tabindex="-1"
     aria-labelledby="confirmationModalLabel"
     aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="confirmationModalLabel"></h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="@Button_Close">
                </button>
            </div>

            <div class="modal-body py-2"
                 style="min-height:80px; word-break:break-word;">
                <p></p>
            </div>

            <div class="modal-footer">

                <button type="button"
                        class="btn btn-secondary btn-3d"
                        data-bs-dismiss="modal">
                    @Button_Cancel
                </button>

                <button type="button"
                        class="btn btn-primary btn-3d"
                        data-modal-confirm>
                    <i class="fa fa-check"></i> @Button_Confirm
                </button>

            </div>

        </div>
    </div>
</div>
