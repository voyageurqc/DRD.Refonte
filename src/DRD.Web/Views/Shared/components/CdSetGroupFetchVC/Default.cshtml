@model DRD.Web.Models.GrpSystemTables.CdSetVM.CdSetGroupFetchVM

<div class="cdset-group-container">

    @* Affichage des groupes *@
    @foreach (var group in Model.Groups)
    {
        <div class="cdset-group-section mb-4">

            @* Titre du groupe *@
            <h5 class="fw-bold text-primary mb-2">
                @group.GroupName
            </h5>

            @if (group.Items != null && group.Items.Any())
            {
                <ul class="list-group">

                    @foreach (var item in group.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>@item.Code</strong> — @item.DescriptionLocalized
                            </span>
                        </li>
                    }

                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">
                    @Model.NoItemsMessage
                </p>
            }
        </div>
    }
</div>
